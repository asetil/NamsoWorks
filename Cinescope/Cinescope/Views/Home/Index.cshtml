    <section class="section-pupular">
        @if (Model.HasResult)
        {
            <h3>Popüler Filmler</h3>
            <div class="row">
                @foreach (var item in Model.Results)
                {
                    <div class="col-md-6 col-lg-6">
                        <div class="row film-item">
                            <div class="col-md-5 col-lg-5">
                                <a href="#"><img alt="@item.Adi" class="img-fluid" src="@item.Afis"></a>
                            </div>
                            <div class="col-md-7 col-lg-7">
                                <h4>
                                    <a href="movie-single.html" style="color:#ff0000 !important;">@item.Adi</a>
                                </h4>
                                <p>@item.Aciklama</p>
                                <div class="details">
                                    <div>
                                        <span class="title">Yapım Yılı :</span>
                                        <span class="desc">@item.YapimYili</span>
                                    </div>
                                    <div>
                                        <span class="title">Süre :</span>
                                        <span class="desc">@item.Sure.ToString("#000") dk</span>
                                    </div>
                                    <div>
                                        <span class="title">IMDB Puanı :</span>
                                        <span class="desc">@item.ImdbPuani.ToString("#0.0")</span>
                                    </div>
                                    @if (item.Players != null && item.Players.Count > 0)
                                    {
                                        <div>
                                            <span class="title">Oyuncular :</span>
                                            @foreach (var player in item.Players)
                                            {
                                                <span class="desc">@player.Name</span>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </section>

