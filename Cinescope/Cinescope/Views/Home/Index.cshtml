@model Aware.Search.SearchResult<Cinescope.Web.Models.Film>
@{
    ViewData["Title"] = "Home Page";
}

<style>
    .film-item { background: #303030; padding: 20px 5px; margin: 0; margin-bottom: 20px; border-radius: 5px; }
    .film-item p { letter-spacing: 1px; }
    .film-item .details > div { margin-bottom: 7px; }
    .film-item .details span { font-size: 14px; display: inline-block; text-align: left; }
    .film-item .details span.title { text-align: right; width: 100px; }
    .film-item .details span.desc { padding-left: 10px; color: red; }
</style>

