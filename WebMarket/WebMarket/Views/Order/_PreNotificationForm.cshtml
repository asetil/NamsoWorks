@using Aware.Util
@using Aware.ECommerce.Model
@model Aware.ECommerce.Model.OrderViewModel
@{
    var payment = Model.Settings.PaymentTypes.FirstOrDefault(i => i.SubType == (int)Model.Order.PaymentType) ?? new SimpleItem();
}

