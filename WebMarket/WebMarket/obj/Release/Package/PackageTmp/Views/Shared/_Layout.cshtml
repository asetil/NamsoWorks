<!DOCTYPE html>

<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - WebMarketim.com</title>
    @if (ViewBag.PageDescription != null)
    {
        <meta name="description" content="@ViewBag.PageDescription " />
    }

    <link href="~/resource/img/App/favico.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="TR" http-equiv="content-language" />

    <meta content="text/html; charset=UTF-8" http-equiv="content-type" />
    <meta content="text/html; charset=windows-1254" http-equiv="content-type" />
    <meta content="text/html; charset=ISO-8859-9" http-equiv="content-type" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    @*<meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" />*@
    @RenderSection("metatags", required: false)

    @Styles.Render(Constants.ThemeWhiteCss)
    @if (ViewBag.HasProduct != null && ViewBag.HasProduct == true)
    {
        @Styles.Render(Constants.PageWithProductCss)
    }

    @Scripts.Render(Constants.CommonScripts)
    @RenderSection("header", required: false)

    <!--[if lte IE 8]><!-->
    <script type="text/javascript">
        var isIEBrowser = isIE();
        if (isIEBrowser > 0 && isIEBrowser <= 8)
            //alert(isIEBrowser);
            window.location.href = '/desteklenmeyen-tarayici';
    </script>
