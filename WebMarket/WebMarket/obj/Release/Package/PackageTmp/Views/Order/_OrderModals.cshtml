@using Resource = Resources.Resource

<div class="modal fade" id="preNotificationModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-body wrapper-box">
            <div>
                <button type="button" class="pa close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h1 class="s24">TÜKETİCİ MEVZUATI GEREĞİNCE ÖN BİLGİLENDİRME FORMU</h1>
            </div>

            <div style="max-height: 400px; overflow-y: scroll !important;" class="scrollContent2">
                @Html.Partial("_PreNotificationForm")
            </div>
            <div class="field-row fr">
                @Html.ButtonFor("Tamam", "btn btn-success mt10", string.Empty, "data-dismiss='modal'")
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="distanceSalesModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-body wrapper-box">
            <div>
                <button type="button" class="pa close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h1 class="s24">MESAFELİ SATIŞ SÖZLEŞMESİ</h1>
            </div>

            <div style="max-height: 400px; overflow-y: scroll !important;" class="scrollContent2">
                @Html.Partial("_DistanceSalesAgreement")
            </div>
            <div class="field-row fr">
                @Html.ButtonFor("Tamam", "btn btn-success mt10", string.Empty, "data-dismiss='modal'")
            </div>
        </div>
    </div>
</div>

<div class="modal fade new-order-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <h2 class="mb20">@Resource.Order_ApprovedMessage</h2>
                <i class="mb20 mt20 fa fa-check"></i>
                <div class="dn remittance-message">
                    <p class="mt10 mb10 lead">
                        Sipariş Numarası : <b><span class="order-no"></span></b>
                    </p>
                    <p class="mb20">
                        Siparişinizin işleme alınabilmesi için 3 gün içeresinde ödemeyi tamamlamalısınız.
                        Lütfen <b>Havale/EFT</b> yaparken açıklama kısmında sipariş numaranızı belirtmeyi unutmayın! Havale/EFT yapacağınız banka bilgileri aşağıdadır :
                    </p>

                    <div class="bank-info">
                        <table class="table no-border">
                            <tr>
                                <td>
                                    <p>
                                        <img src="/resource/img/Bank/0.jpg" class="bank-image" style="max-width: 120px;">
                                    </p>
                                </td>
                                <td class="text-left detail"></td>
                            </tr>
                        </table>
                    </div>
                    <p class="mt20">
                        Sipariş detayına gitmek için <a hred="#" class="annotate"><b><u>tıklayınız.</u></b></a>
                    </p>
                </div>
                <span class="redirect-message">Sipariş detayına yönlendiriliyorsunuz..</span>
            </div>
        </div>
    </div>
</div>

<div class="modal fade payment-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="mt20 mb20 text-center loading dn">
                    <h2 class="mb20">Bankaya Yönlendiriliyorsunuz..</h2>
                    <img class="mt20" src="/resource/img/Icons/ajax-loader.gif" alt=""/>
                    <p class="mt20 text-black">Lütfen ödeme işlemi sonlanmadan sayfadan ayrılmayın!</p>
                </div>
                <iframe id="paymentFrame" name="paymentFrame" src="" width="100%" height="100%" scrolling="no" frameborder="0" style="border: 0; overflow: hidden; max-height: 30px;"></iframe>
                <div class="payment-panel"></div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade installments-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <h4 class="block-title">Taksit Seçenekleri</h4>
                <button type="button" class="close pa" data-dismiss="modal" aria-hidden="true">&times;</button>

                <div class="all-installments row" style="padding: 0 10px;">

                </div>
            </div>
        </div>
    </div>
</div>